{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Wait for API :8000",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "while (-not (Test-NetConnection -ComputerName 127.0.0.1 -Port 8000 -InformationLevel Quiet)) { Start-Sleep -Milliseconds 250 }"
      ],
      "problemMatcher": []
    }
  ]
}
